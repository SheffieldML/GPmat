  journal =      "Proc Natl Acad Sci U S A",
  year =         "2010",
  note =         "In press",
  textVersion = paste(
    "Antti Honkela, Charles Girardot, E. Hilary Gustafson, Ya-Hsin Liu, Eileen E. M. Furlong, Neil D. Lawrence, and Magnus Rattray.",
    "Model-based method for transcription factor target identification with limited data.",
    "Proc Natl Acad Sci U S A, 2010.",
    "In press."
  )
)

